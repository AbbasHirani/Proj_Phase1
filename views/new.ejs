<% layout("/layouts/boilerplate.ejs")%>
<div class="row">
    <div class="col-8 offset-2">
<body>
    <h1>PUBLISH HERE!</h1>
    <form action="/listings" method="post">
        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" placeholder="Enter title" class="form-control">
        </div>
        <br><br>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="description" placeholder="Enter Description" class="form-control"></textarea>
        </div>
        <br><br>
        <div>
            <label for="image" class="form-label">Image</label>
            <input type="text" name="image" placeholder="Enter Image Link/URL" class="form-control">
        </div>
        <br><br>
        <div>
            <label for="price" class="form-label">Price</label>
            <input type="number" name="price" placeholder="Enter Price" class="form-control">
        </div>
        <br><br>
        <div class="row">
            <div class="col-md-4">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" placeholder="Enter location" class="form-control">
            </div>
            <br><br>
            <div class="col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="country" placeholder="Enter Country" class="form-control">
            </div>
        </div>
        <br><br>
        <button class="btn btn-dark">ADD!</button>
        <br><br>
    </form>
</body>
</div>
</div>